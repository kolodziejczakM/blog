{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "built_scripts",
        "target": "es6",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["esnext.asynciterable", "es2015", "dom"]
    },
    "include": ["./scripts/**/*"]
}
